<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zys.baiduphoneguard.activity.SplashActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/splash_tiaoguo"
        android:textColor="@color/colorSplash_go"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/rg_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_first_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/splash_dot_selector"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_second_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/splash_dot_selector"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_third_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/splash_dot_selector"
            android:button="@null" />
    </RadioGroup>
</RelativeLayout>
